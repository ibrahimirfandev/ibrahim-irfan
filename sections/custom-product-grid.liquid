<style>
  /* --- IMPORT FONTS --- */
  @import url('https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Lustria&display=swap');

  /* --- SECTION WRAPPER --- */
  .tiso-wild-section {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: #333;
    overflow: hidden; /* Prevents horizontal scrollbars if content bleeds out */
  }

  /* --- MAIN CONTAINER --- */
  /* Used to constrain width on ultra-wide monitors */
  .tiso-wild-container {
    max-width: 3800px; 
    margin: 0 auto; 
    padding: 0 45px; 
  }

  /* Section Title */
  .tiso-wild-heading {
    font-size: 36px;
    font-weight: 400;
    margin-bottom: 30px;
    font-family: Lustria; 
    color: #000;
  }

  /* --- GRID LAYOUT --- */
  /* Creates a 3-column layout for the lifestyle images */
  .tiso-wild-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  /* Individual Image Container */
  .tiso-wild-item {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1; /* Forces a perfect square shape */
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .tiso-wild-item img.lifestyle-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures image fills the square without stretching */
    display: block;
    transition: transform 0.5s ease;
  }

  /* --- THE HOTSPOT (+) BUTTON --- */
  /* This is the small circular button placed over the image */
  .tiso-hotspot {
    position: absolute;
    width: 32px;
    height: 32px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    transform: translate(-50%, -50%); /* Centers the button exactly on the XY coordinates */
    transition: transform 0.2s ease, background 0.2s;
    z-index: 2;
    border: none;
    padding: 0;
  }

  .tiso-hotspot svg {
    width: 12px;
    height: 12px;
    color: #000;
  }

  /* --- MODAL / POPUP OVERLAY --- */
  /* The dark background behind the popup */
  .tiso-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* State when popup is open */
  .tiso-modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* --- POPUP CONTENT BOX --- */
  .tiso-modal-content {
    background: #fff;
    height: 500px; 
    max-width: 400px;
    padding: 30px;
    position: relative;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transform: translateY(20px); /* Start slightly lower for slide-up effect */
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  /* Animation when opening */
  .tiso-modal-overlay.active .tiso-modal-content {
    transform: translateY(0);
  }

  /* Close (X) Button */
  .tiso-close-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 10;
    padding: 5px;
  }
  
  .tiso-close-btn svg {
    width: 14px;
    height: 14px;
    color: #000;
  }

  /* --- POPUP HEADER (Image + Title + Price) --- */
  .tiso-popup-header {
    display: flex;
    gap: 20px;
    margin-bottom: 25px;
  }

  .tiso-popup-img-wrapper {
    flex: 0 0 130px; /* Fixed width for product thumbnail */
    height: 150px;
    background: #f9f9f9;
    overflow: hidden;
  }

  .tiso-popup-img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tiso-popup-info {
    flex: 1;
  }

  .tiso-product-title {
    font-family: Jost;
    font-size: 16px;
    margin: 0 0 5px 0;
    font-weight: 400;
    line-height: 1.2;
    color: #000;
  }

  .tiso-product-price {
    font-family: Lustria;
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 12px;
    color: #000;
  }

  .tiso-product-desc {
    font-size: 13px;
    line-height: 1.4;
    color: #444;
  }

  /* --- PRODUCT OPTIONS (Color/Size) --- */
  .tiso-option-group {
    margin-bottom: 20px;
  }

  .tiso-option-label {
    display: block;
    font-size: 14px;
    font-weight: 400;
    margin-bottom: 8px;
    color: #222;
  }

  /* Custom Color Buttons Logic */
  .tiso-color-container {
    display: flex;
    width: 100%;
    border: 1px solid #ccc;
    overflow: hidden;
  }

  .tiso-color-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 44px;
    border: none;
    background: #fff;
    cursor: pointer;
    padding: 0 10px;
    font-size: 14px;
    color: #000;
    position: relative;
    border-right: 1px solid #ccc;
    transition: background-color 0.2s, color 0.2s;
  }
  
  .tiso-color-btn:last-child {
    border-right: none;
  }

  /* Tiny vertical color strip inside the button */
  .tiso-color-bar {
    margin-left: -10px;
    width: 5px;
    height: 100px; /* Ensures it spans full height */
    display: block;
    margin-right: 10px;
  }

  /* Active State for Color Button */
  .tiso-color-btn.selected {
    background-color: #000;
    color: #fff;
  }

  /* --- CUSTOM DROPDOWN SELECT (Size) --- */
  .tiso-custom-select-wrapper {
    position: relative;
    width: 100%;
    border: 1px solid #000;
  }

  /* The visible part of the dropdown */
  .tiso-custom-select-trigger {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 15px;
    font-size: 15px;
    font-weight: 400;
    color: #000;
    background: #fff;
    cursor: pointer;
  }

  .tiso-custom-select-trigger svg {
    width: 12px;
    height: 7px;
    transition: transform 0.3s;
  }
  
  /* Rotate arrow when open */
  .tiso-custom-select.open .tiso-custom-select-trigger svg {
    transform: rotate(180deg);
  }

  /* The hidden list of options */
  .tiso-custom-options {
    display: none;
    position: absolute;
    width: 100%;
    left: 0;
    top: 100%;
    background: #fff;
    border: 1px solid #000;
    border-top: none;
    z-index: 50;
    max-height: 135px; 
    overflow-y: auto; /* Scroll if too many sizes */
    scrollbar-width: none; 
    -ms-overflow-style: none;  
  }
  
  .tiso-custom-options::-webkit-scrollbar {
    display: none;
  }
  
  .tiso-custom-select.open .tiso-custom-options {
    display: block;
  }

  .tiso-custom-option {
    padding: 12px 0;
    text-align: center;
    font-size: 14px;
    cursor: pointer;
    transition: background 0.2s;
    background: #fff;
    color: #000;
  }
  
  .tiso-custom-option:hover, .tiso-custom-option.selected {
    background-color: #000;
    color: #fff;
  }

  /* --- ADD TO CART BUTTON --- */
  .tiso-atc-btn {
    width: 100%;
    background-color: #000;
    color: #fff;
    border: none;
    padding: 15px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-top: 10px;
    transition: opacity 0.3s;
  }
  
  .tiso-atc-btn:hover {
    opacity: 0.9;
  }
  
  /* Arrow animation on hover */
  .tiso-atc-btn svg {
    width: 18px;
    height: 12px;
    transition: transform 0.3s ease;
  }
  
  .tiso-atc-btn:hover svg {
    transform: translateX(5px);
  }

  /* --- LARGE SCREENS (4k+) --- */
  @media (min-width: 3000px) {
    .tiso-wild-heading{
      display: none; /* Hide heading on very large screens per design */
    }
    .tiso-wild-item{
      max-width: 920px;
      max-height: 945px;
    }
     .tiso-wild-container {
      padding: 0 460px; 
    }
  }

  /* --- MOBILE RESPONSIVENESS --- */
  @media (max-width: 767px) {

    .tiso-wild-grid { 
      grid-template-columns: repeat(2, 1fr); /* 2 columns on mobile */
      gap: 10px; 
    }

    /* Reduce padding */
    .tiso-wild-container {
      padding: 0 10px;
    }

    /* Adjust Modal size for small screens */
    .tiso-modal-content { 
      padding: 20px; 
      width: 90%; 
    }
    
    .tiso-popup-header { 
      flex-direction: row; 
    }
    
    /* Smaller product thumbnail in popup */
    .tiso-popup-img-wrapper { 
      width: 90px; 
      flex: 0 0 90px; 
      height: 110px; 
    }
    
    .tiso-product-title {
      font-size: 16px;
    }
     .tiso-wild-heading {
    text-align: center;
  }
}
</style>

<div class="tiso-wild-section">
  <div class="tiso-wild-container">
    {% comment %} Display heading only if user entered one {% endcomment %}
    {% if section.settings.heading != blank %}
      <h2 class="tiso-wild-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="tiso-wild-grid">
      {% comment %} Loop through blocks (Lifestyle Images) {% endcomment %}
      {% for block in section.blocks %}
        {% assign product = all_products[block.settings.product] %}
        
        <div class="tiso-wild-item" {{ block.shopify_attributes }}>
          {% comment %} Lifestyle Image {% endcomment %}
          {% if block.settings.image != blank %}
            <img class="lifestyle-img" src="{{ block.settings.image | img_url: '3800x' }}" alt="Lifestyle Image">
          {% else %}
             {{ 'image' | placeholder_svg_tag }}
          {% endif %}

          {% comment %} Only show hotspot if a product is actually linked {% endcomment %}
          {% if product != blank %}
            
            <button class="tiso-hotspot" 
              style="left: {{ block.settings.hotspot_x }}%; top: {{ block.settings.hotspot_y }}%;"
              onclick="openTisoModal('modal-{{ block.id }}')">
              <svg viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 0V12M0 6H12" stroke="currentColor" stroke-width="1.5"/>
              </svg>
            </button>

            <div id="modal-{{ block.id }}" class="tiso-modal-overlay" onclick="if(event.target === this) closeTisoModal('modal-{{ block.id }}')">
              <div class="tiso-modal-content">
                
                <button class="tiso-close-btn" onclick="closeTisoModal('modal-{{ block.id }}')">
                  <svg viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13 1L1 13M1 1L13 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
                
                <div class="tiso-popup-header">
                  <div class="tiso-popup-img-wrapper">
                    <img id="img-{{ block.id }}" src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
                  </div>
                  <div class="tiso-popup-info">
                    <h3 class="tiso-product-title">{{ product.title }}</h3>
                    <div class="tiso-product-price">{{ product.price | money }}</div>
                    <div class="tiso-product-desc">
                      {{ product.description | strip_html | truncate: 80 }}
                    </div>
                  </div>
                </div>

                <form method="post" action="/cart/add" class="tiso-product-form" id="form-{{ block.id }}">
                  <input type="hidden" name="id" class="tiso-variant-id" value="{{ product.variants.first.id }}">
                  
                  <script type="application/json" class="tiso-product-json">
                    {{ product.variants | json }}
                  </script>

                  {% comment %} --- COLOR OPTIONS LOGIC --- {% endcomment %}
                  {% assign color_option = product.options_with_values | where: "name", "Color" | first %}
                  {% if color_option == blank %}
                    {% assign color_option = product.options_with_values | where: "name", "Colour" | first %}
                  {% endif %}
                  
                  {% if color_option %}
                    <div class="tiso-option-group" data-option-index="option{{ color_option.position }}">
                      <label class="tiso-option-label">Color</label>
                      <div class="tiso-color-container">
                        {% for value in color_option.values %}
                          
                          {% comment %} Find the image associated with this specific color variant {% endcomment %}
                          {% assign variant_image = '' %}
                          {% for variant in product.variants %}
                            {% if variant.options contains value and variant.image %}
                              {% assign variant_image = variant.image | img_url: '400x' %}
                              {% break %}
                            {% endif %}
                          {% endfor %}

                          <button type="button" class="tiso-color-btn {% if forloop.first %}selected{% endif %}"
                                  data-value="{{ value }}"
                                  onclick="selectTisoColor(this, 'img-{{ block.id }}', '{{ variant_image }}')">
                            <span class="tiso-color-bar" style="background-color: {{ value | handle }};"></span>
                            {{ value }}
                          </button>
                        {% endfor %}
                      </div>
                    </div>
                  {% endif %}

                  {% comment %} --- SIZE OPTIONS LOGIC --- {% endcomment %}
                  {% assign size_option = product.options_with_values | where: "name", "Size" | first %}
                  {% if size_option %}
                    <div class="tiso-option-group" data-option-index="option{{ size_option.position }}">
                      <label class="tiso-option-label">Size</label>
                      <div class="tiso-custom-select-wrapper">
                        <div class="tiso-custom-select" onclick="this.classList.toggle('open')">
                          <div class="tiso-custom-select-trigger">
                            <span class="selected-text">Choose your size</span>
                            <svg viewBox="0 0 12 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M1 6L6 1L11 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                          </div>
                          <div class="tiso-custom-options">
                             {% for value in size_option.values %}
                               <div class="tiso-custom-option" data-value="{{ value }}" onclick="selectTisoOption(this)">{{ value }}</div>
                             {% endfor %}
                          </div>
                        </div>
                      </div>
                    </div>
                  {% endif %}

                  <button type="submit" class="tiso-atc-btn">
                    Add to Cart
                    <svg width="18" height="12" viewBox="0 0 18 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 1L17 6L12 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M17 6H1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                     </svg>
                  </button>
                </form>

              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

