<script>
  // --- POPUP MANAGEMENT ---

  // Opens the modal when the (+) hotspot is clicked
  function openTisoModal(modalId) {
    const modal = document.getElementById(modalId);
    if(modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden'; // Stop background scrolling
    }
  }

  // Closes the modal and resets any open dropdowns
  function closeTisoModal(modalId) {
    const modal = document.getElementById(modalId);
    if(modal) {
      modal.classList.remove('active');
      document.body.style.overflow = '';
      
      // Close any Size dropdowns that might still be open inside the modal
      const dropdowns = modal.querySelectorAll('.tiso-custom-select');
      dropdowns.forEach(d => d.classList.remove('open'));
    }
  }

  // --- SIZE SELECTION LOGIC ---
  // Triggered when a user clicks a size option in the custom dropdown
  function selectTisoOption(optionElement) {
    const wrapper = optionElement.closest('.tiso-custom-select');
    const triggerSpan = wrapper.querySelector('.selected-text');
    
    // Update the visual text box to show selected size
    triggerSpan.textContent = optionElement.textContent;
    
    // Switch the 'selected' styling
    const allOptions = wrapper.querySelectorAll('.tiso-custom-option');
    allOptions.forEach(opt => opt.classList.remove('selected'));
    optionElement.classList.add('selected');

    // Update the hidden input for the form submission
    updateVariantId(optionElement.closest('form'));
  }

  // --- COLOR SELECTION LOGIC ---
  // Triggered when a user clicks a color button
  function selectTisoColor(btnElement, imgId, newImgSrc) {
    // Switch visual selection state
    const container = btnElement.parentElement;
    const allBtns = container.querySelectorAll('.tiso-color-btn');
    allBtns.forEach(btn => btn.classList.remove('selected'));
    btnElement.classList.add('selected');

    // If there's a specific image for this color variant, swap it in
    if (newImgSrc && newImgSrc !== '') {
      const imgEl = document.getElementById(imgId);
      if(imgEl) {
        // Simple fade effect
        imgEl.style.opacity = '0.5'; 
        setTimeout(() => {
          imgEl.src = newImgSrc;
          imgEl.style.opacity = '1'; 
        }, 150);
      }
    }
    
    // Update the hidden input for the form submission
    updateVariantId(btnElement.closest('form'));
  }

  // --- VARIANT MATCHING LOGIC ---
  // This function finds the correct Shopify Variant ID based on user choices (Color + Size)
  function updateVariantId(form) {
    const jsonEl = form.querySelector('.tiso-product-json');
    if(!jsonEl) return;
    
    // Parse the JSON data containing all product variants
    const variants = JSON.parse(jsonEl.textContent);
    
    // 1. Get currently selected Color
    const colorBtn = form.querySelector('.tiso-color-btn.selected');
    const colorVal = colorBtn ? colorBtn.getAttribute('data-value') : null;
    
    // 2. Get currently selected Size
    const sizeOpt = form.querySelector('.tiso-custom-option.selected');
    const sizeVal = sizeOpt ? sizeOpt.getAttribute('data-value') : null;

    // 3. Find a variant that matches both criteria
    let matchedVariant = variants.find(variant => {
      let matchCount = 0;
      // Check if this variant includes the selected color
      if (colorVal && variant.options.includes(colorVal)) matchCount++;
      // Check if this variant includes the selected size
      if (sizeVal && variant.options.includes(sizeVal)) matchCount++;
      
      // Calculate how many matches we need (e.g., if only Size exists, we need 1 match)
      const needed = (colorVal ? 1 : 0) + (sizeVal ? 1 : 0);
      return matchCount === needed;
    });

    // 4. Update the hidden input field named "id"
    if (matchedVariant) {
      form.querySelector('.tiso-variant-id').value = matchedVariant.id;
    }
  }
  
  // --- GLOBAL EVENT LISTENERS ---
  // Close custom dropdowns if the user clicks outside of them
  document.addEventListener('click', function(e) {
    if (!e.target.closest('.tiso-custom-select')) {
        document.querySelectorAll('.tiso-custom-select').forEach(d => d.classList.remove('open'));
    }
  });
</script>